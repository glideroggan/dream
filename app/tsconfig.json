{
  "compilerOptions": {
    "pretty": false,
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Node",
    "importHelpers": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "strictPropertyInitialization": false,
    "strict": true,
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["dom", "esnext"],
    "noImplicitAny": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "paths": {
      "@chart/js": ["./node_modules/@chart/js/dist/chart.js.d.ts"],
      "@microsoft/fast-elements": ["./node_modules/@microsoft/fast-elements/dist/fast-elements.d.ts"],

      "@mocks/*": ["./src/repositories/mock/*.ts"],
      "@mocks/accounts": ["./src/repositories/mock/account-mock.ts"],
      "@mocks/card": ["./src/repositories/mock/card-mock.ts"],
      "@mocks/loan": ["./src/repositories/mock/loan-mock.ts"],
      "@mocks/product": ["./src/repositories/mock/product-mock.ts"],
      "@mocks/settings": ["./src/repositories/mock/settings-mock.ts"],
      "@mocks/transaction": ["./src/repositories/mock/transaction-mock.ts"],
      "@mocks/upcoming-transaction": ["./src/repositories/mock/upcoming-transaction-mocks.ts"],
      "@mocks/user-products": ["./src/repositories/mock/user-products-mock.ts"],
      "@mocks/user": ["./src/repositories/mock/user-mock.ts"],

      "@components/modal": ["./src/components/modal-component.ts"],

      "@widgets/account": ["./dist/widgets/account-widget/account-widget.d.ts"],
      "@widgets/welcome": ["./dist/widgets/welcome/welcome-widget.d.ts"],
      "@workflows/transfer": ["./dist/workflows/transfer/transfer-workflow.d.ts"],
      "@workflows/swish-workflow": ["./dist/workflows/swish-workflow.d.ts"],
      "@workflows/add-contact-workflow": ["./dist/workflows/add-contact-workflow.d.ts"],

      "@primitives": ["./src/primitives/index.ts"],
      "@primitives/button": ["./src/primitives/button/button.ts"],
      "@primitives/input": ["./src/primitives/input/input.ts"],
      "@primitives/select": ["./src/primitives/select/select.ts"],
      "@primitives/card": ["./src/primitives/card/card.ts"],
      "@primitives/checkbox": ["./src/primitives/checkbox-primitive.ts"],
      "@primitives/toast": ["./src/primitives/toast/toast.ts"],
      "@primitives/toast-service": ["./src/primitives/toast/toast-service.ts"],
      "@primitives/skeleton": ["./src/primitives/skeleton/skeleton.ts"],
      "@primitives/tooltip": ["./src/primitives/tooltip/tooltip.ts"],
      "@primitives/tokens": ["./src/primitives/tokens/design-tokens.css.ts"]
    }
  },
  "include": ["src"],
  "exclude": ["**/*.archived.ts"]
}