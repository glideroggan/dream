{
  "compilerOptions": {
    "pretty": false,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "importHelpers": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "strictPropertyInitialization": false,
    "strict": true,
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["dom", "esnext"],
    "noImplicitAny": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "paths": {
      "@widgets/account": ["./dist/widgets/account-widget/account-widget.d.ts"],
      "@widgets/welcome": ["./dist/widgets/welcome/welcome-widget.d.ts"],
    }
  },
  "include": ["src"],
}